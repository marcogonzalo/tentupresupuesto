<%- model_class = Trabajo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:proposito) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:estatus) %></th>
      <th><%= model_class.human_attribute_name(:direccion) %></th>
      <th><%= model_class.human_attribute_name(:precio_final) %></th>
      <th><%= model_class.human_attribute_name(:solicitante_id) %></th>
      <th><%= model_class.human_attribute_name(:contratado_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trabajos.each do |trabajo| %>
      <tr>
        <td><%= link_to trabajo.id, trabajo_path(trabajo) %></td>
        <td><%= trabajo.proposito %></td>
        <td><%= trabajo.descripcion %></td>
        <td><%= trabajo.estatus %></td>
        <td><%= trabajo.direccion %></td>
        <td><%= trabajo.precio_final %></td>
        <td><%= trabajo.solicitante_id %></td>
        <td><%= trabajo.contratado_id %></td>
        <td><%=l trabajo.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_trabajo_path(trabajo), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      trabajo_path(trabajo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trabajo_path,
            :class => 'btn btn-primary' %>
