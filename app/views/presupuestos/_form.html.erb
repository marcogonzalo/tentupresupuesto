<%
 content_for :head do
    stylesheet_link_tag 'trabajos', 'presupuestos'
  end

  content_for :title do
    "Presupuesto para: "+@trabajo.proposito
  end

  content_for :article_tag_id do
    "solicitud-trabajo"
  end

  content_for :liston do
    render :partial => 'trabajos/cabecera', :locals => {:trabajo => @trabajo, :cantidad_presupuestos => @trabajo.presupuestos.size, :color => "b"}
  end

  content_for :foot do
    javascript_include_tag 'presupuestos'
  end
%>
<div id="crear-presupuesto" class="formulario-pendon offset1 span12">
    <div class="titulo-pendon">
        <h2 class="sobre-color">Presupuesto</h2>
    </div>
    <div class="cuerpo-pendon">
        <%= form_for @path, :validate => true do |f| %>
            <span class="help-block mini-nota">Se indicar√° al cliente que estos son montos estimados y no definitivos.</span>
            <div class="control-group row">
                <%= f.label :precio_minimo, :class => 'control-label' %>
                <div class="span4 controls">
                    <%= f.text_field :precio_minimo, :class => "text-field" %>
                </div>
            </div>
            <div class="control-group row">
                <%= f.label :precio_maximo, :class => 'control-label' %>
                <div class="span4 controls">
                    <%= f.text_field :precio_maximo, :class => "text-field" %>
                </div>
            </div>
            <div class="control-group">
                <label for="presupuesto_con_iva" class="checkbox" %> <%= f.check_box :con_iva, :class => 'check_box' %> El precio incluye <abbr title="Impuesto al Valor Agregado">IVA</abbr> </label>
            </div>
            <div class="control-group">
                <%= f.label :resumen, :class => 'control-label' %>
                <div class="controls">
                    <%= f.text_area :resumen, :class => 'text_area' %>
                </div>
            </div>
            <div class="botones">
                <%= link_to t('.cancel', :default => t("helpers.links.cancel")), trabajo_path(@trabajo), :class => 'btn' %>
                <%= f.submit 'Enviar presupuesto', :class => 'btn btn-warning' %>
            </div>
        <% end %>
    </div>
</div>
<%= render :partial => 'trabajos/caracteristicas', :locals => {:trabajo => @trabajo} %>
