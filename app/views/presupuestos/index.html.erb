<div class="page-header">
  <h1>Presupuesto</h1>
  <h2><%=t @trabajo.proposito %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Proveedor</th>
      <th>Reputaci&oacute;n</th>
      <th>Precio estimado</th>
      <th>Mensajes</th>
    </tr>
  </thead>
  <tbody>
    <% @presupuestos.each do |p| %>
      <tr class="presupuesto">
        <td class="proveedor-interesado"><%= p.proveedor.nombre_empresa %></td>
        <td><%= raw mostrar_reputacion(p.proveedor.reputacion, p.proveedor.valoraciones, "general") %></td>
        <td><%= link_to((number_to_currency(p.precio_minimo)+" a "+number_to_currency(p.precio_maximo)), p) %> (<%= p.incluye_iva%>)</td>
        <td><%= link_to(p.mensajes.size, presupuesto_path(p, :anchor => "mensajes"))  %> (<%= p.mensajes.where(:usuario => :proveedor, :visto => false).size %> sin leer)</td>
    </tr>
    <% end %>
  </tbody>
</table>