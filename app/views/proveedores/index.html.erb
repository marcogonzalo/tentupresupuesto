<%- model_class = Proveedor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre_empresa) %></th>
      <th><%= model_class.human_attribute_name(:tipo_proveedor) %></th>
      <th><%= model_class.human_attribute_name(:rif) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:verificado) %></th>
      <th><%= model_class.human_attribute_name(:telefono_local) %></th>
      <th><%= model_class.human_attribute_name(:telefono_movil) %></th>
      <th><%= model_class.human_attribute_name(:telefono_alt) %></th>
      <th><%= model_class.human_attribute_name(:direccion) %></th>
      <th><%= model_class.human_attribute_name(:punto_referencia) %></th>
      <th><%= model_class.human_attribute_name(:solicitudes_atendidas) %></th>
      <th><%= model_class.human_attribute_name(:trabajos_realizados) %></th>
      <th><%= model_class.human_attribute_name(:reputacion) %></th>
      <th><%= model_class.human_attribute_name(:valoraciones) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @proveedores.each do |proveedor| %>
      <tr>
        <td><%= link_to proveedor.id, proveedor_path(proveedor) %></td>
        <td><%= proveedor.nombre_empresa %></td>
        <td><%= proveedor.tipo_proveedor %></td>
        <td><%= proveedor.rif %></td>
        <td><%= proveedor.descripcion %></td>
        <td><%= proveedor.verificado %></td>
        <td><%= proveedor.telefono_local %></td>
        <td><%= proveedor.telefono_movil %></td>
        <td><%= proveedor.telefono_alt %></td>
        <td><%= proveedor.direccion %></td>
        <td><%= proveedor.punto_referencia %></td>
        <td><%= proveedor.solicitudes_atendidas %></td>
        <td><%= proveedor.trabajos_realizados %></td>
        <td><%= proveedor.reputacion %></td>
        <td><%= proveedor.valoraciones %></td>
        <td><%=l proveedor.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_proveedor_path(proveedor), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      proveedor_path(proveedor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_proveedor_path,
            :class => 'btn btn-primary' %>
