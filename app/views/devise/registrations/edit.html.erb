<% 
  content_for :title do 
    "Editar datos de usuario"
  end

  if resource.errors.any? %>
  <div class="alert alert-error">
    <%= resource.errors.messages %>
    Algo pas&oacute;. Revisa el formulario para verificar errores.
  </div>
<% end %>
<h1>Cambio de clave</h1>
  <div id="registro" class="hide formulario-pendon span12 al-centro">
    <div class="titulo-pendon"><h2 class="sobre-color">Editar mis datos</h2></div>
    <div class="cuerpo-pendon">
      <%= form_for(@usuario, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :validate => true) do |f| %>
        <div class="control-group"><%= f.label :email %>
          <div class="controls"><%= f.email_field :email, {:readonly => true} %></div>
        </div>
        <div class="botones">
          <%= f.submit "Cambiar datos", :class => 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>

  <div id="cambiar-clave" class="formulario-pendon al-centro">
    <div class="titulo-pendon"><h2 class="sobre-color">Cambiar clave</h2></div>
    <div class="cuerpo-pendon">
      <%= simple_form_for(@usuario, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :validate => true) do |f| %>
        <%= f.hidden_field :email %>
        <%= f.input :current_password, required: true %>
        <hr>
        <%= f.input :password, required: true %>
        <%= f.input :password_confirmation, required: true %>
        <div class="botones">
          <%= f.submit "Cambiar clave", :class => 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
<div class="span10 al-centro centrado hide">
<h2>Cancelar mi cuenta</h2>
<p>&iquest;No te satisface el servicio? <br><%= link_to "Cancelar mi cuenta", registration_path(resource_name), :class => "btn btn-danger",  :data => { :confirm => "&iquest;De verdad deseas cancelar tu cuenta?" }, :method => :delete %></p>
</div>

