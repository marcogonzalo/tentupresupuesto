<h2>Cambia tu clave secreta</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="control-group"><%= f.label :password, "Nueva clave" %>
    <div class="controls"><%= f.password_field :password %></div>
  </div>
  
  <div class="control-group"><%= f.label :password_confirmation, "Confirma la nueva clave" %>
    <div class="controls"><%= f.password_field :password_confirmation %></div>
  </div>

  <div class="form-actions">
    <p><%= f.submit "Cambiar mi clave", :class => 'btn btn-primary' %></p>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
