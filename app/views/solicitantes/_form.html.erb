<%= form_for(@solicitante) do |f| %>

  <div class="control-group"><%= f.label :cedula %>
    <div class="controls"><%= f.number_field :cedula %></div>
  </div>
  <fieldset>
    <legend>Datos de contacto</legend>
    (Ser&aacute; entregado al proveedor al aprobar su presupuesto)
    
    <div class="control-group"><%= f.label :telefono_local %>
      <div class="controls"><%= f.text_field :telefono_local %></div>
    </div>
    
    <div class="control-group"><%= f.label :telefono_movil %>
      <div class="controls"><%= f.text_field :telefono_movil %></div>
    </div>
    
    <div class="control-group"><%= f.label :telefono_alt %>
      <div class="controls"><%= f.text_field :telefono_alt %></div>
    </div>
  </fieldset>
  <fieldset>
    <legend>Datos de ubicaci&oacute;n</legend>
    (Facilita la publicaci&oacute;n de solicitudes)
    
    <div class="control-group"><%= f.label :pais_id, "PaÃ­s" %>
      <div class="controls"><%= select_entidad(:solicitante,:pais_id,nil,"pais") %></div>
    </div>
    
    <div class="control-group"><%= f.label :estado_id, "Estado" %>
      <div class="controls"><%= select_entidad(:solicitante,:estado_id,1,"estado") %><%= image_tag "cargando.gif", {:class => "cargando", :id => "loadingestado"} %></div>
    </div>
    
    <div class="control-group"><%= f.label :municipio_id, "Municipio" %>
      <div class="controls"><%= select_entidad(:solicitante,:municipio_id,@solicitante.estado_id,"municipio") %><%= image_tag "cargando.gif", {:class => "cargando", :id => "loadingmunicipio"} %></div>
    </div>
    
    <div class="control-group"><%= f.label :localidad_id, "Localidad" %>
      <div class="controls"><%= text_entidad(:solicitante,:localidad_id,@localidad) %><%= image_tag "cargando.gif", {:class => "cargando", :id => "loadinglocalidad"} %></div>
    </div>
    
    <div class="control-group"><%= f.label :direccion %>
      <div class="controls"><%= f.text_area :direccion %></div>
    </div>
    <div class="control-group"><%= f.label :punto_referencia %>
      <div class="controls"><%= f.text_field :punto_referencia %></div>
    </div>
  </fieldset>
  <div class="form-actions">
    <p><%= f.submit "Guardar perfil", :class => 'btn btn-primary' %></p>
  </div>
<% end %>
