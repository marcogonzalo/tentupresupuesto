<%= form_for(@solicitante) do |f| %>
  <% if @solicitante.errors.any? %>
    <div class="alert alert-error">
      Ocurri&oacute; un error. Revisa el formulario.
    </div>
  <% end %>

  <div class="control-group"><%= f.label :cedula %>
    <div class="controls"><%= f.number_field :cedula %></div>
  </div>
  <fieldset>
    <legend>Datos de ubicaci&oacute;n</legend>
    (Facilita la publicaci&oacute;n de solicitudes)
    <div class="control-group"><%= f.label :direccion %>
      <div class="controls"><%= f.text_field :direccion %></div>
    </div>
    <div class="control-group"><%= f.label :punto_referencia %>
      <div class="controls"><%= f.text_field :punto_referencia %></div>
    </div>
  </fieldset>
  <div class="form-actions">
    <p><%= f.submit "Guardar perfil", :class => 'btn btn-primary' %></p>
  </div>
<% end %>
