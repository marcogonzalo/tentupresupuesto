<% if flash[:warning] and false %>
  <p class="alert alert-warning"><%= flash[:notice] %></p>
<% elsif flash[:error] and false  %>
  <p class="alert alert-error"><%= flash[:error] %></p>
<% elsif flash[:info] and false  %>
  <p class="alert alert-info"><%= flash[:info] %></p>
<% elsif flash[:success] and false  %>
  <p class="alert alert-success"><%= flash[:success] %></p>
<% elsif notice and false  %>
  <p class="alert alert-warning"><%= notice %></p>
<% elsif alert and false  %>
  <p class="alert alert-error"><%= alert %></p>
<% end %>

