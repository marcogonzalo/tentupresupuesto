<%- model_class = Mensaje -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      <th><%= model_class.human_attribute_name(:usuario) %></th>
      <th><%= model_class.human_attribute_name(:visto) %></th>
      <th><%= model_class.human_attribute_name(:presupuesto_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mensajes.each do |mensaje| %>
      <tr>
        <td><%= link_to mensaje.id, mensaje_path(mensaje) %></td>
        <td><%= mensaje.comentario %></td>
        <td><%= mensaje.usuario %></td>
        <td><%= mensaje.visto %></td>
        <td><%= mensaje.presupuesto_id %></td>
        <td><%=l mensaje.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mensaje_path(mensaje), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mensaje_path(mensaje),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mensaje_path,
            :class => 'btn btn-primary' %>
