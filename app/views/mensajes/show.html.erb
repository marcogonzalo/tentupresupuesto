<%- model_class = Mensaje -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:comentario) %>:</strong></dt>
  <dd><%= @mensaje.comentario %></dd>
  <dt><strong><%= model_class.human_attribute_name(:usuario) %>:</strong></dt>
  <dd><%= @mensaje.usuario %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visto) %>:</strong></dt>
  <dd><%= @mensaje.visto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:presupuesto_id) %>:</strong></dt>
  <dd><%= @mensaje.presupuesto_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mensajes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mensaje_path(@mensaje), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mensaje_path(@mensaje),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
