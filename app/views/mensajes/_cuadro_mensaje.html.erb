<% unless m.new_record? %>
<div class="mensaje mensaje-<%= m.usuario.downcase %> <%= m.usuario.to_s.downcase == tipo_usuario.downcase ? "mensaje-tu" : "mensaje-otro"%>">
	<p class="tipo-usuario pull-left">
		<b><%= (m.usuario.to_s.downcase == tipo_usuario.downcase ? "tÃº" : m.usuario.to_s).camelize %></b>: <span class="leido"><%= "("+m.leido+")" if m.usuario.downcase == tipo_usuario.downcase %></span>
